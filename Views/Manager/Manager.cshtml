@{
    Layout = null;
}
@model IEnumerable<WFManagementSystemClient.Models.Manager>
<style>
    .table {
        font-family: Times New Roman, Times, serif;
        border-collapse: collapse;
        width: 60%;
        margin-top: 60px;
        
    }

        .table td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tr:hover {
            background-color: #ddd;
        }

        .table th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: center;
            background-color: #Add8e6;
            color: white;
        }

    .heading {
        text-align: center;
        font-size: 25px;
        margin-top: 110px;
        font-family: Times New Roman, Times, serif;
    }
</style>
<h3 class="heading">PROFILE DETAILS</h3>

<table class='table' align="center">

    <tr>
        <th> Id </th>
        <th> Name </th>
        <th> Skill </th>
        <th> Profile </th>
        <th> Experience </th>
        <th> Manager </th>
        <th> Lock Status </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td> @item.EmpId </td>
            <td> @item.Name </td>
            <td> @item.Skill </td>
            <td> @item.Profile </td>
            <td> @item.Experience </td>
            <td> @item.ManagerName </td>
            @*<td><a asp-action="Edit" asp-route-id="@item.LockId"> Request </a></td>*@
        <td> <input type="button" class="btn btn-default" value="Request" onclick="Edit"/></td>

        </tr>
    }



</table>